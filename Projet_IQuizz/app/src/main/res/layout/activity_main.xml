<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/noir"
    tools:context=".controller.MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:contentDescription="@string/description_logo"
        android:src="@drawable/logo" />
    
    <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              style="@style/DefaultText"
              android:gravity="center"
              android:paddingTop="0dp"
              android:text="@string/userID"/>

    <EditText
              android:id="@+id/get_userID"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              style="@style/DefaultHint"
              android:gravity="center"
              android:inputType="text"
              android:hint="@string/get_userID"/>

    <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              style="@style/DefaultText"
              android:gravity="center"
              android:paddingTop="10dp"
              android:text="@string/password"/>

    <EditText
              android:id="@+id/get_password"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              style="@style/DefaultHint"
              android:gravity="center"
              android:inputType="textPassword"
              android:hint="@string/get_password"/>

    <Button
        android:id="@+id/connexion"
        style="@style/DefaultText"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@drawable/default_bouton"
        android:text="@string/connexion" />
    
    <TextView
              android:id="@+id/nouveauCompte"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              style="@style/DefaultTextPetit"
              android:paddingTop="10dp"
              android:text="@string/nouveauCompte"/>
    <CheckBox
             android:id="@+id/resterConnecte"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              style="@style/DefaultTextPetit"
              android:text="@string/resterConnecte"/>

</LinearLayout>